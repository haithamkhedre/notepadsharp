<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="NotepadSharp.App.Dialogs.UnsavedChangesDialog"
        Title="Unsaved Changes"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

  <StackPanel Margin="16" Spacing="12" MinWidth="360">
    <TextBlock x:Name="MessageText" TextWrapping="Wrap" Text="Save changes before closing?" />

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button MinWidth="90" Content="Save" Click="OnSave" />
      <Button MinWidth="90" Content="Don't Save" Click="OnDontSave" />
      <Button MinWidth="90" Content="Cancel" Click="OnCancel" />
    </StackPanel>
  </StackPanel>
</Window>
