{
  "version": "2.0.0",
  "options": {
    "env": {
      "DOTNET_ROOT": "${env:HOME}/.dotnet",
      "PATH": "${env:HOME}/.dotnet:${env:PATH}"
    }
  },
  "tasks": [
    {
      "label": "dotnet: restore",
      "type": "shell",
      "command": "dotnet",
      "args": ["restore"],
      "problemMatcher": []
    },
    {
      "label": "dotnet: build (Release)",
      "type": "shell",
      "command": "dotnet",
      "args": ["build", "NotepadSharp.sln", "-c", "Release"],
      "problemMatcher": ["$msCompile"],
      "group": "build",
      "dependsOn": ["dotnet: restore"]
    },
    {
      "label": "dotnet: test (Release)",
      "type": "shell",
      "command": "dotnet",
      "args": ["test", "NotepadSharp.sln", "-c", "Release"],
      "problemMatcher": ["$msCompile"],
      "group": "test",
      "dependsOn": ["dotnet: build (Release)"]
    },
    {
      "label": "dotnet: run app",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "src/NotepadSharp.App/NotepadSharp.App.csproj"
      ],
      "problemMatcher": [],
      "dependsOn": ["dotnet: build (Release)"]
    }
  ]
}
