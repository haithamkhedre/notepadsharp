{
  "version": "2.0.0",
  "options": {
    "env": {
      "DOTNET_ROOT": "${env:HOME}/.dotnet",
      "PATH": "${env:HOME}/.dotnet:${env:PATH}"
    }
  },
  "tasks": [
    {
      "label": "Notepad#: Restore",
      "type": "shell",
      "command": "${env:HOME}/.dotnet/dotnet",
      "args": ["restore", "NotepadSharp.sln"],
      "problemMatcher": []
    },
    {
      "label": "Notepad#: Build (Release)",
      "type": "shell",
      "command": "${env:HOME}/.dotnet/dotnet",
      "args": ["build", "NotepadSharp.sln", "-c", "Release"],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Notepad#: Test (Release)",
      "type": "shell",
      "command": "${env:HOME}/.dotnet/dotnet",
      "args": ["test", "NotepadSharp.sln", "-c", "Release"],
      "problemMatcher": ["$msCompile"],
      "dependsOn": ["Notepad#: Build (Release)"]
    },
    {
      "label": "Notepad#: Run App",
      "type": "shell",
      "command": "${env:HOME}/.dotnet/dotnet",
      "args": [
        "run",
        "--project",
        "src/NotepadSharp.App/NotepadSharp.App.csproj",
        "-c",
        "Release"
      ],
      "problemMatcher": [],
      "dependsOn": ["Notepad#: Build (Release)"]
    }
  ]
}
