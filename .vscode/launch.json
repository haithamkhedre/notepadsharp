{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "NotepadSharp.App (debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet: build (Release)",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/NotepadSharp.App/NotepadSharp.App.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "DOTNET_ROOT": "${env:HOME}/.dotnet",
        "PATH": "${env:HOME}/.dotnet:${env:PATH}"
      }
    }
  ]
}
