{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "NotepadSharp.App (Release debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Notepad#: Build (Release)",
      "program": "${env:HOME}/.dotnet/dotnet",
      "args": [
        "${workspaceFolder}/src/NotepadSharp.App/bin/Release/net10.0/NotepadSharp.App.dll"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "DOTNET_ROOT": "${env:HOME}/.dotnet",
        "PATH": "${env:HOME}/.dotnet:${env:PATH}"
      }
    }
  ]
}
